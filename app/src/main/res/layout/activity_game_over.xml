<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vmb.hoingu.activity.GameOverActivity">

    <LinearLayout
        android:id="@+id/lose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_wrong_answer"
        android:orientation="vertical"
        android:visibility="visible">

        <!--<ImageView
            android:id="@+id/img_upload_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:tint="@android:color/white"
            android:src="@mipmap/ic_upload"/>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/lbl_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="30dp"
            android:background="@mipmap/bg_question_box"
            android:paddingBottom="25dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="5dp"

            android:text="Xem hết video để nhận thêm \nlượt chơi nữa, bạn nhé!\nBạn còn n lượt xem"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/img_face" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/lbl_dapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="Đáp án: Donald Trump"
            android:textColor="@color/yellow"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm: 12"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/lbl_highscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm cao nhất: 20"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/btn_watch"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@mipmap/btn_watch_video" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="115dp"
                android:layout_height="55dp"
                android:src="@mipmap/btn_menu" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/btn_replay"
                android:layout_width="115dp"
                android:layout_height="55dp"
                android:src="@mipmap/btn_replay" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@mipmap/btn_send_highscore" />

        <FrameLayout
            android:id="@+id/layout_ads_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/adView_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/win"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_correct_answer"
        android:orientation="vertical">

        <!--<ImageView
            android:id="@+id/img_upload_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:tint="@android:color/white"
            android:src="@mipmap/ic_upload"/>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="10dp"
            android:background="@mipmap/bg_question_box"
            android:paddingBottom="25dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="1dp"

            android:text="Sample explain here"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@mipmap/btn_continue" />

        <FrameLayout
            android:id="@+id/layout_ads_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/adView_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
