<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_question" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@mipmap/ic_back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <ImageView
                    android:id="@+id/img_sound"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_sound_on"
                    android:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/img_leaderboard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_ranking" />

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_share" />

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_menu"
                    android:tint="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp">

                <ImageView
                    android:id="@+id/img_star"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_white_star" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/lbl_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="1/1"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/lbl_roll_round_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="+ 1 Lượt quay"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btn_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="10dp"
            android:background="@mipmap/bg_question_box"
            android:paddingBottom="25dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="1dp"

            android:text="Sample question here"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu: 1/961"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/lbl_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Của: Tùng Sơn"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/lbl_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginRight="10dp"
                android:text="Ngu: 3"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_a"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="3dp"

                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:background="@mipmap/bg_box_1"
                android:padding="10dp"

                android:text="a"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_b"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"

                android:layout_marginRight="6dp"
                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:background="@mipmap/bg_box_2"
                android:padding="10dp"

                android:text="b"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_c"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="3dp"

                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:background="@mipmap/bg_box_3"
                android:padding="10dp"

                android:text="c"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_d"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"

                android:layout_marginRight="6dp"
                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:background="@mipmap/bg_box_4"
                android:padding="10dp"

                android:text="d"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_adview" />

    <include
        layout="@layout/layout_roll_round"
        android:visibility="gone" />

    <include
        layout="@layout/layout_choose_package"
        android:visibility="gone" />

    <include
        layout="@layout/layout_flying_star"
        android:visibility="gone" />

    <include
        layout="@layout/layout_share_fb"
        android:visibility="gone" />

</FrameLayout>
