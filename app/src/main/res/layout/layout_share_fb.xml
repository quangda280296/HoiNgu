<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_fb_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="30dp"
            android:background="@mipmap/bg_question_box"
            android:paddingBottom="20dp"
            android:paddingHorizontal="20dp"

            android:text="Chia sẻ câu hỏi này lên Facebook để được bạn bè trợ giúp"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/img_emo_share_fb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:src="@mipmap/btn_pass" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/btn_share_fb"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:src="@mipmap/btn_share" />

    </LinearLayout>

</FrameLayout>